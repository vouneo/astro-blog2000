---
const themes = [
  { id: 'vintage-parchment', name: 'Vintage', icon: 'ðŸ“œ' },
  { id: 'crimson-gothic', name: 'Gothic', icon: 'ðŸŒ¹' },
  { id: 'hacker', name: 'Hack', icon: 'ðŸ’š' }
];
---

<div class="theme-switcher">
  {themes.map(theme => (
    <button
      data-theme-btn={theme.id}
      class="theme-btn"
      title={`Cambiar a tema ${theme.name}`}
    >
      <span class="icon">{theme.icon}</span>
      <span class="name">{theme.name}</span>
    </button>
  ))}
</div>

<style>
  .theme-switcher {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
  }

  .theme-btn {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    font-weight: 500;
    border: 1px solid var(--theme-accent);
    background-color: var(--theme-button-bg);
    color: var(--theme-button-text);
    cursor: pointer;
    border-radius: 4px;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .theme-btn.active {
    background-color: var(--theme-accent) !important;
    color: var(--theme-button-hover-text) !important;
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.2);
  }

  .theme-btn:hover {
    background-color: var(--theme-accent-hover);
    color: var(--theme-button-hover-text);
    box-shadow: 0 0 6px var(--theme-accent-hover);
    transform: translateY(-1px);
  }

  .icon {
    font-size: 0.875rem;
    line-height: 1;
  }

  .name {
    font-size: 0.6875rem;
    line-height: 1;
    font-weight: 600;
  }

  /* Responsive: solo iconos en pantallas pequeÃ±as */
  @media (max-width: 640px) {
    .name {
      display: none;
    }
    
    .theme-btn {
      padding: 0.375rem;
      min-width: 2rem;
      justify-content: center;
    }

    .icon {
      font-size: 1rem;
    }
  }

  /* Extra pequeÃ±o: botones aÃºn mÃ¡s compactos */
  @media (max-width: 480px) {
    .theme-switcher {
      gap: 0.125rem;
    }

    .theme-btn {
      padding: 0.25rem;
      min-width: 1.75rem;
    }

    .icon {
      font-size: 0.875rem;
    }
  }

  /* Efecto de brillo sutil */
  .theme-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.08),
      transparent
    );
    transition: left 0.4s ease;
  }

  .theme-btn:hover::before {
    left: 100%;
  }
</style>