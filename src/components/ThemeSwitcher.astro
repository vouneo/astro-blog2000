---
const themes = [
  { id: 'retro', name: 'Retro 2000', icon: 'üåê' },
  { id: 'synthwave', name: 'Synthwave', icon: 'üåÜ' },
  { id: 'hacker', name: 'neonHack', icon: 'üíö' }
];
---

<div class="theme-switcher">
  {themes.map(theme => (
    <button
      data-theme-btn={theme.id}
      class="retro-button theme-btn"
      title={`Cambiar a tema ${theme.name}`}
    >
      <span class="icon">{theme.icon}</span>
      <span class="name">{theme.name}</span>
    </button>
  ))}
</div>

<style>
  .theme-switcher {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .theme-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    position: relative;
    overflow: hidden;
  }

  .theme-btn.active {
    background-color: var(--theme-accent) !important;
    color: var(--theme-button-hover-text) !important;
    box-shadow: 0 0 15px var(--theme-accent);
  }

  .icon {
    font-size: 1.125rem;
  }

  /* Responsive: ocultar texto en pantallas peque√±as */
  @media (max-width: 640px) {
    .name {
      display: none;
    }
    
    .theme-btn {
      padding: 0.5rem;
    }
  }

  /* Efecto de brillo al hover */
  .theme-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
    transition: left 0.5s;
  }

  .theme-btn:hover::before {
    left: 100%;
  }
</style>