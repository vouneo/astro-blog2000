export const prerender = false;

// Password desde variable de entorno
const ADMIN_PASSWORD = import.meta.env.ADMIN_PASSWORD || 'change-this-password-123';

let loginError = '';

// Manejar el login
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const password = formData.get('password') as string;
    
    if (password === ADMIN_PASSWORD) {
      // Establecer cookie de autenticaci√≥n
      Astro.cookies.set('admin-auth', password, {
        path: '/',
        maxAge: 60 * 60 * 24 * 7, // 7 d√≠as
        httpOnly: true,
        secure: import.meta.env.PROD, // Solo HTTPS en producci√≥n
        sameSite: 'strict'
      });
      
      return Astro.redirect('/admin');
    } else {
      loginError = 'Invalid password';
    }
  } catch (error) {
    console.error('Login error:', error);
    loginError = 'Login error occurred';
  }
}

// Si ya est√° autenticado, redirigir al admin
const authCookie = Astro.cookies.get('admin-auth')?.value;
if (authCookie === ADMIN_PASSWORD) {
  return Astro.redirect('/admin');
}
